<div class="row">
  <h1>Add New Charity</h1>
  <div class="large-6 columns">
    <%= form_for(@charity) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>

      <%= f.submit 'Submit', class: 'button tiny' %>
    <% end %>
  </div>
</div>
